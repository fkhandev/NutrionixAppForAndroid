<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="21"
    android:columnCount="2"
    tools:context=".ItemDetailsActivity" >

    	 <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_column="0"
	        android:layout_row="0"
	        android:text="Brand:" />
	
	    <TextView
	        android:id="@+id/brandname"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:labelFor="@+string/brand_name"
	        android:layout_column="1"
	        android:layout_row="0"
	         />
	
	     <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="1"
	         android:text="Item:" />
	
	    <TextView
	        android:id="@+id/itemname"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="1"
	        />
     
	    
	     <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="2"
	         android:text="Item Description:" />
	
	    <TextView
	        android:id="@+id/itemdesc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:scrollHorizontally="false"
			android:ellipsize="none"	        
	        android:layout_column="1"
	        android:layout_row="2"
	        />

	    
	    <!--  nutrients  -->
	     <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="3"
	         android:text="Ingredient Statement:" />
	
	    <TextView
	        android:id="@+id/nf_ingredient_statement"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:scrollHorizontally="false"
			android:ellipsize="none"        
	        
	        android:layout_column="1"
	        android:layout_row="3"
	        />

	     <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="4"
	         android:text="Calories" />
	
	    <TextView
	        android:id="@+id/nf_calories"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="4"
	        />	    	    	    	    	    
	    
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="5"
	         android:text="Calories from fat" />
	
	    <TextView
	        android:id="@+id/nf_calories_from_fat"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="5"
	        />	    	    	    	    	    
	    
			    
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="6"
	         android:text="Total Fat" />
	
	    <TextView
	        android:id="@+id/nf_total_fat"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="6"
	        />	  
		
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="7"
	         android:text="Saturated Fat" />
	
	    <TextView
	        android:id="@+id/nf_saturated_fat"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="7"
	        />	  
	    
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="8"
	         android:text="Mono unsaturated Fat" />
	
	    <TextView
	        android:id="@+id/nf_monounsaturated_fat"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="8"
	        />	  
	        
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="9"
	         android:text="Polyunsaturated Fat" />
	
	    <TextView
	        android:id="@+id/nf_polyunsaturated_fat"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="9"
	        />	  

	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="10"
	         android:text="Trans fatty acid" />
	
	    <TextView
	        android:id="@+id/nf_trans_fatty_acid"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="10"
	        />	 
	        	    
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="11"
	         android:text="cholesterol:" />
	
	    <TextView
	        android:id="@+id/nf_cholesterol"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="11"
	        />	 

	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="12"
	         android:text="Sodium:" />
	
	    <TextView
	        android:id="@+id/nf_sodium"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="12"
	        />	 	    	    

	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="13"
	         android:text="Total Carbohydrates" />
	
	    <TextView
	        android:id="@+id/nf_total_carbohydrate"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="13"
	        />	 	

	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="14"
	         android:text="Dietary Fiber" />
	
	    <TextView
	        android:id="@+id/nf_dietary_fiber"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="14"
	        />


	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="15"
	         android:text="Sugars" />
	
	    <TextView
	        android:id="@+id/nf_sugars"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="15"
	        />
	    
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="16"
	         android:text="Proteins:" />
	
	    <TextView
	        android:id="@+id/nf_protein"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="16"
	        />

	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="17"
	         android:text="Serving per container" />
	
	    <TextView
	        android:id="@+id/nf_servings_per_container"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="17"
	        />	    	    	    	    	    	    	    	        	    	            	    
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="18"
	         android:text="Serving Size Quantity:" />
	
	    <TextView
	        android:id="@+id/nf_serving_size_qty"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="18"
	        />
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="19"
	         android:text="Serving size per unit:" />
	
	    <TextView
	        android:id="@+id/nf_serving_size_unit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="19"
	        />

	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_column="0"
	         android:layout_gravity="left"
	         android:layout_row="20"
	         android:text="Serving weight in grams:" />
	
	    <TextView
	        android:id="@+id/nf_serving_weight_grams"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_column="1"
	        android:layout_row="20"
	        />
</GridLayout>
